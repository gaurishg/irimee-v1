extends ../layout

mixin rowMixin(field, data)
    - if(data.length > 0)
        .row
            .col.col-sm-2
                strong= field
            .col.col-sm
                - if(typeof data == "string")
                    = data
                - else
                    - for( var i = 0; i < data.length - 1 ; ++i)
                        = data[i]
                        |, 
                    = data[data.length - 1]

block head-part
    link(rel="stylesheet", href="/stylesheets/library-styles.css")

block content
    // h1= Title
    .container
        .row
            .col
                h1= Title

        .row
            .col
                img.img-thumbnail(src="/images/book-covers/" + image_file, alt="Book cover")

        if languages    
            +rowMixin("Language(s)", languages)
        
        if ISBN10
            +rowMixin("ISBN10", ISBN10)
        
        if ISBN13
            +rowMixin("ISBN13", ISBN13)

        if authors
            +rowMixin("Author(s)", authors)

        if tags
            +rowMixin("Tag(s)", tags)

        if publisher
            +rowMixin("Publisher", publisher)

        hr
        
        .row
            .col
                h2 Copies (#{book_instances.length})



block more-js
    // Nothing